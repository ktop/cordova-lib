<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="org.test.xmlattributestest"
    version="1.0.0">

    <name>Adding attributes through config-file</name>

    <!-- android -->
    <platform name="android">
        <!-- merge -->
        <config-file target="AndroidManifest.xml" parent="application" mode="merge">
            <activity android:hardwareAccelerated="true" />
            <activity android:configChanges="orientation" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest" mode="merge">
            <uses-sdk android:targetSdkVersion="23" />
            <uses-sdk android:minSdkVersion="14" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*/application" mode="merge">
            <activity android:hardwareAccelerated="true" />
            <activity android:configChanges="orientation" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest/application" mode="merge">
            <poop android:poop="poop" />
        </config-file>

        <!-- replace -->
        <config-file target="AndroidManifest.xml" parent="application" mode="replace">
            <activity android:name="ChildApp" android:label="@string/app_name">
    			<intent-filter>
    				<action android:name="android.intent.action.MAIN" />
    				<category android:name="android.intent.category.LAUNCHER" />
    			</intent-filter>
            </activity>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest/application" mode="replace">
            <activity android:name="ChildApp" android:label="@string/app_name">
    			<intent-filter>
    				<action android:name="android.intent.action.MAIN" />
    				<category android:name="android.intent.category.LAUNCHER" />
    			</intent-filter>
            </activity>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*/*/activity" mode="replace">
            <intent-filter android:name="intent">
			</intent-filter>
        </config-file>

        <!-- delete -->
        <config-file target="AndroidManifest.xml" parent="application" mode="delete">
            <activity android:name="com.phonegap.DroidGap" android:label="@string/app_name"
                	  android:configChanges="orientation|keyboardHidden" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest" mode="delete">
            <uses-sdk android:minSdkVersion="5" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*/application" mode="delete">
            <activity android:name="com.phonegap.DroidGap" android:label="@string/app_name"
                	  android:configChanges="orientation|keyboardHidden" />
        </config-file>
    </platform>

</plugin>
